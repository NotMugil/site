---
import { formatDate } from "@/lib/util";

const { post } = Astro.props;
---

<hr
  class="border-b-1 border-light-accent dark:border-dark-accent mx-2 border-opacity-5 first:border-0 dark:border-opacity-10"
/>
<li
  class="hover:border-light-accent dark:hover:border-dark-accent hover:bg-light-secondary dark:hover:bg-dark-secondary flex flex-col rounded-lg border border-white border-opacity-0 no-underline hover:border hover:border-opacity-10 hover:dark:border-opacity-10"
>
  <a
    href={`/blog/${post.slug}`}
    class="text-black no-underline dark:text-white"
  >
    <div class="flex flex-col justify-between p-4 md:flex-row">
      <div>
        <span>{post.data.title}</span>
      </div>
      <div class="md:text-md whitespace-nowrap text-sm text-gray-500">
        {formatDate(post.data.publicationDate)}
      </div>
    </div>
  </a>
</li>
