---
import { type CollectionEntry, getCollection } from "astro:content";
import { Image } from "astro:assets";
import Drag from "@/components/animations/Drag.jsx";
import SlideIn from "@/components/animations/SlideIn.jsx";
import BlogLayout from "@/layouts/BlogLayout.astro";
import Navigation from "@/components/Navigation.astro";
import SeoPost from "@/components/SeoPost.astro";
import { formatDate, readingTime } from "@/lib/util";

interface Props {
  entry: CollectionEntry<"blog">;
}

export async function getStaticPaths() {
  const blog = await getCollection("blog");
  return blog.map((entry) => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const authors = await getCollection("authors");
const author = authors.find((user) => user.slug === entry.data.author);

if (!author) {
  console.warn(
    `Author data is not registered or slug doesn't exist for: ${entry.data.author}`,
  );
}

const blog = await getCollection("blog");
const sortedPosts = blog.sort(
  (
    a: { data: { publicationDate: Date } },
    b: { data: { publicationDate: Date } },
  ) => b.data.publicationDate.valueOf() - a.data.publicationDate.valueOf(),
);

const currentPostIndex = sortedPosts.findIndex(
  (post) => post.slug === entry.slug,
);

const previousPost = sortedPosts[currentPostIndex - 1] || null;
const nextPost = sortedPosts[currentPostIndex + 1] || null;
const otherPosts = blog.filter((post) => post.slug !== entry.slug);
const randomPost =
  otherPosts[Math.floor(Math.random() * otherPosts.length)] || null;

const readTime = readingTime(entry.body);
const { Content, headings } = await entry.render();
---

<BlogLayout>
  <SeoPost slot="head" entry={entry} />
  <div class="mx-2 h-full md:mx-0 md:grid md:grid-cols-5">
    <div class="z-2 m-4 flex flex-col md:col-span-2">
      <div class="sticky top-28">
        <p
          class="text-light-accent dark:text-dark-accent text-sm text-opacity-70 md:text-sm dark:opacity-70"
        >
          {formatDate(entry.data.publicationDate)}
        </p>
        <h1 class="mt-3 py-2 text-2xl font-bold text-black dark:text-white">
          {entry.data.title}
        </h1>
        <div class="flex flex-col gap-2">
          <p
            class="text-light-accent dark:text-dark-accent text-sm text-opacity-70 md:text-sm dark:opacity-70"
          >
            {readTime}
          </p>
        </div>
        {
          author ? (
            <div class="mt-8 flex flex-col items-start gap-2">
              <Drag client:load>
                <div>
                  {author.data.avatar && (
                    <a href={`/authors/${author.slug}`}>
                      <Image
                        src={author.data.avatar}
                        alt={author.data.name || "undefined"}
                        width={34}
                        height={34}
                        draggable="false"
                        class="z-100 index-10 h-auto cursor-pointer rounded-md"
                      />
                    </a>
                  )}
                </div>
              </Drag>
              <div class="flex flex-col">
                <a
                  href={`/authors/${author.slug}`}
                  class="decor text-sm font-semibold text-gray-900 dark:text-gray-100"
                >
                  by{" "}
                  <span class="text-gray-600 dark:text-gray-400">
                    {" "}
                    @{author.data.name}{" "}
                  </span>
                </a>
              </div>
            </div>
          ) : (
            <div class="mt-8 flex flex-col items-start text-center">
              <div class="my-2 h-8 w-8 rounded-md bg-gray-200 dark:bg-gray-700" />
              <p class="text-sm font-semibold text-gray-900 dark:text-gray-100">
                Unknown Author
              </p>
              <p class="text-xs text-gray-500 dark:text-gray-400">
                This author is currently not listed in our records.
              </p>
            </div>
          )
        }
      </div>
    </div>
    <div class="md:col-span-3">
      <SlideIn client:load>
        <div class="flex flex-row">
          <article
            class="flex-l prose z-10 mx-auto w-full dark:prose dark:prose-dark lg:max-w-screen-md dark:text-white"
          >
            <Content />
          </article>
        </div>
      </SlideIn>
      <br />
      <div
        class="text-dark-primary dark:text-light-primary my-8 flex w-full flex-row justify-between gap-4"
      >
        {
          previousPost ? (
            <a
              href={`/blog/${previousPost.slug}`}
              class="hover:bg-light-secondary dark:hover:bg-dark-secondary bg-light-primary dark:bg-dark-primary border-light-accent dark:border-dark-accent w-1/2 rounded-lg border border-opacity-10 p-4 dark:border dark:border-opacity-10"
            >
              <p class="opacity-50"> Previous Post </p>
              {previousPost.data.title}
            </a>
          ) : (
            <a
              href={`/blog/${randomPost.slug}`}
              class="hover:bg-light-secondary dark:hover:bg-dark-secondary bg-light-primary dark:bg-dark-primary border-light-accent dark:border-dark-accent w-1/2 rounded-lg border border-opacity-10 p-4 dark:border dark:border-opacity-10"
            >
              <p class="opacity-50"> Random Post </p>
              {randomPost.data.title}
            </a>
          )
        }

        {
          nextPost ? (
            <a
              href={`/blog/${nextPost.slug}`}
              class="hover:bg-light-secondary dark:hover:bg-dark-secondary bg-light-primary dark:bg-dark-primary border-light-accent dark:border-dark-accent w-1/2 rounded-lg border border-opacity-10 p-4 dark:border dark:border-opacity-10"
            >
              <p class="opacity-50"> Next Post </p>
              {nextPost.data.title}
            </a>
          ) : (
            <a
              href={`/blog/${previousPost.slug}`}
              class="hover:bg-light-secondary dark:hover:bg-dark-secondary bg-light-primary dark:bg-dark-primary border-light-accent dark:border-dark-accent w-1/2 rounded-lg border border-opacity-10 p-4 dark:border dark:border-opacity-10"
            >
              <p class="opacity-50"> Random Post </p>
              {previousPost.data.title}
            </a>
          )
        }
      </div>
    </div>
  </div>
</BlogLayout>
